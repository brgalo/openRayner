#version 460
#extension GL_EXT_ray_tracing : require


layout(location = 0) rayPayloadEXT vec3 pay;

layout(binding = 0, set = 0) uniform accelerationStructureEXT scene;

void main() {
    uvec2 pixel = gl_LaunchIDEXT.xy;
    vec3 pos = vec3(0,0,-1);
    vec3 dir = vec3(0,0,1);

    pay = vec3(0);

    traceRayEXT(
        scene,
        gl_RayFlagsOpaqueEXT,
        0xFF,
        0,
        0,
        0,
        pos,
        0.0,
        dir,
        1000,
        0
    );
}